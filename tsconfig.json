{
  "extends": "./node_modules/expo/tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    // Evitar selecionar variaÃ§Ãµes web stub (ex.: MapView.web.ts em react-native-maps) durante a checagem do tsc
    // para permitir que o tsc use as implementaÃ§Ãµes reais (MapView.tsx). O bundler do Expo cuidarÃ¡ dos alvos web em runtime.
    "moduleSuffixes": ["", ".native", ".ios", ".android"],
    // Removido para evitar erro TS2688 em ambientes sem Node typings
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    // Usar resoluÃ§Ã£o de mÃ³dulos "bundler" compatÃ­vel com Expo
    "moduleResolution": "bundler",
    "noEmit": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "target": "esnext",
    "module": "esnext",
    "isolatedModules": true,
    "noUnusedLocals": false,
    // Temporariamente desabilitado para destravar a compilaÃ§Ã£o. Reativar apÃ³s limpar variÃ¡veis/parÃ¢metros nÃ£o utilizados.
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "typeAcquisition": {
    "enable": false
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.d.ts", ".expo/types/**/*.ts", "expo-env.d.ts"],
  "exclude": [
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    // Excluir setup do Jest da checagem do tsc para evitar poluição de tipos e erros de globals
    "jest.setup.ts",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__mocks__/**",
    "android/disabled-modules-backup/**",
    ".cursor/**",
    ".pnpm-store/**",
    "scripts/**",
    "functions/**",
    // Excluir diretórios grandes que dependem pesadamente de react-native no tsc offline
    "node_modules/**",
    "node_modules_old/**",
    // Excluir controladores de backend, rotas e middlewares do backend, e exemplos didáticos da checagem do tsc — não são necessários para execução do app Expo.
    "src/controllers/**",
    "src/routes/**",
    "src/middleware/**",
    "src/examples/**"
  ]
}
