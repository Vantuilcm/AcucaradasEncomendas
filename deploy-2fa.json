{
  "name": "acucaradas-2fa-deploy",
  "version": "1.0.0",
  "description": "Scripts para implantação e teste da função de 2FA",
  "scripts": {
    "login": "firebase login",
    "set-project": "firebase use acucaradas-encomendas",
    "set-email-config": "firebase functions:config:set email.user=\"notificacao@acucaradas.com.br\" email.password=\"app-senha-segura-123\" email.sender=\"notificacao@acucaradas.com.br\"",
    "get-config": "firebase functions:config:get",
    "prepare": "cd functions && npm install && cd ..",
    "deploy": "firebase deploy --only functions:sendVerificationCode --project acucaradas-encomendas",
    "deploy-all": "firebase deploy --only functions --project acucaradas-encomendas",
    "emulate": "firebase emulators:start",
    "logs": "firebase functions:log",
    "test-script": "node test-2fa.js"
  },
  "author": "Açucaradas Encomendas",
  "private": true
}
