# Configurações otimizadas para resolver conflitos de dependências
node-linker=hoisted
strict-peer-dependencies=false
auto-install-peers=true
shallow-install=false
resolve-peers-from-workspace-root=true
save-workspace-protocol=false
engine-strict=false
fund=false
audit=false
strict-ssl=false
save-exact=true
prefer-frozen-lockfile=false

# Padrões de hoisting específicos para resolver conflitos
hoist-pattern[]=*
public-hoist-pattern[]=*expo*
public-hoist-pattern[]=*react*
public-hoist-pattern[]=*metro*
public-hoist-pattern[]=*expo-router*
public-hoist-pattern[]=*@expo/metro-runtime*
public-hoist-pattern[]=*@react-navigation*
public-hoist-pattern[]=*@babel*
public-hoist-pattern[]=*firebase*
public-hoist-pattern[]=*react-native-reanimated*
public-hoist-pattern[]=*react-native-gesture-handler*
public-hoist-pattern[]=*react-native-screens*
public-hoist-pattern[]=*@types/react*
public-hoist-pattern[]=*scheduler*
public-hoist-pattern[]=*react-is*

# Desativar verificações que podem bloquear a instalação
legacy-peer-deps=true
ignore-scripts=false

shamefully-hoist=true
resolution-mode=highest
use-node-version=18.18.0
public-hoist-pattern[]=*@expo*
public-hoist-pattern[]=*@react*
public-hoist-pattern[]=*react-native*
public-hoist-pattern[]=*@react-native*
public-hoist-pattern[]=babel*
public-hoist-pattern[]=*navigation*
public-hoist-pattern[]=*@navigation*
