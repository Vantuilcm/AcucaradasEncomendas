{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "lib",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es2022",
    "lib": ["es2022"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
