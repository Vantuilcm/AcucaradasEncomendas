<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AccountDeletionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exclusão de Conta"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="16dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Exclusão Completa da Conta"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ao excluir sua conta, todos os seus dados pessoais, histórico de pedidos e informações de clientes serão removidos permanentemente. Esta ação não pode ser desfeita."
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dados que serão excluídos:"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Informações de conta (nome, e-mail, telefone)\n• Informações de perfil\n• Dados de clientes cadastrados\n• Histórico de pedidos\n• Preferências e configurações"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dados que serão mantidos por obrigações legais:"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Registros de transações financeiras (por 5 anos)\n• Dados anonimizados para fins estatísticos"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btn_delete_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Excluir Minha Conta"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/colorDanger" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Exclusão Parcial de Dados"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Você pode solicitar a exclusão de dados específicos sem excluir sua conta completamente. Selecione abaixo quais dados você deseja excluir."
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btn_partial_deletion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selecionar Dados para Exclusão"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/colorAccent" />

                <LinearLayout
                    android:id="@+id/layout_partial_deletion_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="16dp">

                    <CheckBox
                        android:id="@+id/cb_delete_orders"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Histórico de pedidos antigos" />

                    <CheckBox
                        android:id="@+id/cb_delete_clients"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dados de clientes específicos" />

                    <CheckBox
                        android:id="@+id/cb_delete_media"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fotos de perfil e outras mídias" />

                    <CheckBox
                        android:id="@+id/cb_delete_preferences"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Preferências e configurações" />

                    <Button
                        android:id="@+id/btn_confirm_partial_deletion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Confirmar Exclusão Parcial"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/colorWarning"
                        android:layout_marginTop="16dp" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Informações Adicionais"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• O processamento da sua solicitação pode levar até 15 dias úteis.\n• Você receberá uma confirmação por e-mail quando o processo for concluído.\n• Para mais informações, consulte nossa Política de Privacidade ou entre em contato com nossa equipe de suporte."
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Para solicitar a exclusão por e-mail, envie sua solicitação para: privacidade@acucaradas.com.br"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Você também pode acessar nossa página web de exclusão de conta em: www.acucaradas.com.br/exclusao-conta"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>